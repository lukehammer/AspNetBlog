@model AspNetBlog.Models.Post[]
@{
    Layout = "_Layout";
}

@foreach (var post in Model)
{
    @Html.Partial("_Post", post)
}

<nav>
    <ul class="pager">
        @if (ViewBag.HasPreviousPage == true)
        {
            <li><a href="@Url.Action("Index", new { page = ViewBag.PreviousPage })">Previous</a></li>
        }
        @if (ViewBag.HasNextPage == true)
        {
            <li><a href="@Url.Action("Index", new { page = ViewBag.NextPage })">Next</a></li>
        }
    </ul>
</nav>
